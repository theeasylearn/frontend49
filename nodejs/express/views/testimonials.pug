include header.pug
section.py-5
  .container
    h1.text-center.display-4.fw-bold.mb-5 What Our Guests Say
    .row.g-4
      each row in data 
        .col-md-6.col-lg-4
          .card.h-100.shadow-sm
            .card-body
              .mb-3 &starf;&starf;&starf;&starf;&starf;
              p.card-text.fst-italic
                | &quot;#{row.detail}!&quot;
              p.fw-bold.text-end.mb-0 &mdash; #{row.name}

footer.bg-dark.text-white.text-center.py-4
