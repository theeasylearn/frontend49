include header.pug 
section.py-5
  .container
    h1.text-center.display-4.fw-bold.mb-5 Our Menu
    .row.g-4
      each row in data
        .col-md-3.col-lg-3
          .card.h-100.shadow-sm
            img.card-img-top(src=row.photo)
            .card-body
              h5.card-title #{row.name}
              p.card-text #{row.detail}
              p.fw-bold.text-success &#x20B9; #{row.price}
footer.bg-dark.text-white.text-center.py-4
